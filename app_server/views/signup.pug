extends layout
block content
 .cardsignup
  .container
    .row
      .col-md-6.col-md-offset-3.mx-auto
        h1=title


        form(action="", method="POST")
          div.form-group
            label Name:
            span.req *
            input#name.form-control(type='text', placeholder='Full Name' name='uname')
          div.form-group
            label Email Address:
            span.req *
            input#email.form-control(type='email', placeholder='name@hotmail.com' name='email')
          div.form-group
            label Username:
            span.req *
            input#email.form-control(type='text', name='username')
          div.form-group
            label Password:
            span.req *
            input#pw.form-control(type='password' name='password')
          div.form-group
            label Confirm Password:
            span.req *
            input#pw2.form-control(type='password' name='confirmPassword')
          input(type="submit" value="submit")
          a(href='/') Have an account already? Login.

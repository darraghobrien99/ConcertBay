extends layout

block content

  h1.ListReviewtitle=pageHeader.title
  .error=message
  each review in reviews
    .cardReview
      .wrap
        h3
         a(href'concerts/${review._id}')=review.artistName
        h3.reviewTitle=review.venueName
          .stars
            span.fa.fa-star.checked
            span.fa.fa-star.checked
            span.fa.fa-star.checked
            span.fa.fa-star.checked
            span.fa.fa-star
        h4.scoreHeadings Entertainment (/ 5) 
        h4.scores=review.entertainment
        h4.scoreHeadings Production (/ 5) 
        h4.scores=review.production
        h4.scoreHeadings Vocals (/ 5) 
        h4.scores=review.vocals
        h4.scoreHeadings Value For Money (/ 5) 
        h4.scores=review.value
        h5.comment=review.comment
      